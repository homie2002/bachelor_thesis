#include <Servo.h>

// Створюємо масив об'єктів Servo для керування чотирма серводвигунами
Servo servos[4];

// Піни, до яких підключені серводвигуни
const int servoPins[4] = {3, 5, 6, 9};

// Початкові кути для кожного серводвигуна
int angles[4] = {90, 90, 90, 90};

// Затримка між рухами в мілісекундах
const int delayTime = 500;

void setup() {
  // Приєднуємо кожен серводвигун до відповідного піну
  for (int i = 0; i < 4; i++) {
    servos[i].attach(servoPins[i]);
    servos[i].write(angles[i]); // Встановлюємо початкове положення
    delay(500); // Невелика затримка для стабілізації
  }
}

void loop() {
  // Приклад послідовних рухів серводвигунів
  for (int i = 0; i < 4; i++) {
    // Поворот серводвигуна на 45 градусів
    angles[i] += 45;
    servos[i].write(angles[i]); // Встановлюємо новий кут
    delay(delayTime); // Затримка між рухами
  }

  // Поворот серводвигунів назад до початкових значень
  for (int i = 0; i < 4; i++) {
    angles[i] -= 45;
    servos[i].write(angles[i]); // Встановлюємо новий кут
    delay(delayTime); // Затримка між рухами
  }
}
